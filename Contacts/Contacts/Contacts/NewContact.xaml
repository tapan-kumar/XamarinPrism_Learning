<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.NewContact"
             Title="Create contact">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save" Clicked="ToolbarItem_Clicked_1"/>
    </ContentPage.ToolbarItems>

    
    
    <ContentPage.Content>
        
        <StackLayout >
           
            <Label Text="First name" FontAttributes="Bold"/>
            <Entry x:Name="FirstNames" />
            <Label Text="Surname" FontAttributes="Bold"/>
            <Entry x:Name="LastName"/>
            <Label Text="Mobile" FontAttributes="Bold"/>
            <Entry Keyboard="Numeric" x:Name="CellNumber"/>
            <Label Text="Email" FontAttributes="Bold"/>
            <Entry Keyboard="Email" x:Name="Email" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>