<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.NewContact"
             Title="Create contact">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Save"  Command="{Binding SaveCommand}"/>
    </ContentPage.ToolbarItems>

    
    
    <ContentPage.Content>
        
        <StackLayout >
           
            <Label Text="First name" FontAttributes="Bold"/>
            <Entry Text="{Binding FirstName}"  />
            <Label Text="Surname" FontAttributes="Bold"/>
            <Entry Text="{Binding LastName }"/>
            <Label Text="Mobile" FontAttributes="Bold"/>
            <Entry Keyboard="Numeric" Text="{Binding CellNumber}"/>
            <Label Text="Email" FontAttributes="Bold"/>
            <Entry Keyboard="Email" Text="{Binding Email}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>